---
import Section from "../Section.astro";

import { education } from '@cv';
---

<Section title="EducaciÃ³n">
    <ul class="flex flex-col gap-8">
      {
        education.map(({ institution, startDate, endDate, area }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`
  
          return (
            <li>
              <article>
                <header class="flex justify-between items-start mb-1 md:justify-normal md:gap-8">
                  <div>
                    <h3 class="font-medium text-gray-500">{institution}</h3>
                  </div>
                  <time class="text-sm text-start font-normal text-gray-400 leading-6">{years}</time>
                </header>
  
                <footer>
                  <p>{area}</p>
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </Section>
